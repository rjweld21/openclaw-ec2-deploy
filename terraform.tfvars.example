# Example Terraform variables for OpenClaw EC2 Deployment
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region
environment = "dev"       # dev, staging, or prod

# Project Configuration
project_name = "openclaw"

# Instance Configuration
instance_type = "t3.medium"  # t3.micro, t3.small, t3.medium, t3.large
key_pair_name = ""           # Your AWS Key Pair name (optional)

# Auto Scaling Configuration
min_size = 1
max_size = 3
desired_capacity = 2

# Network Configuration
vpc_cidr = "10.0.0.0/16"
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this to your IP ranges

# Security Configuration
ssl_certificate_arn = ""  # ARN of SSL certificate (optional)

# Feature Configuration
enable_load_balancer = true
enable_cloudwatch_monitoring = true

# OpenClaw Configuration
openclaw_version = "latest"
openclaw_port = 3000

# Additional Tags
additional_tags = {
  "Owner"     = "your-name"
  "Purpose"   = "openclaw-gateway"
  "CostCenter" = "engineering"
}