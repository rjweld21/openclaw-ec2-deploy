# Example Terraform variables file for OpenClaw EC2 deployment
# Copy this file to terraform.tfvars and adjust values as needed

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "openclaw"

# State Management (set to false if state bucket already exists)
create_state_bucket = true

# VPC and Networking
vpc_cidr = "10.0.0.0/16"
# availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]  # Leave empty for auto-discovery

# EC2 Instance Configuration
instance_type = "t3.medium"
ami_id = ""  # Leave empty for latest Amazon Linux 2
key_pair_name = "my-key-pair"  # Create this key pair in AWS EC2 console first

# Auto Scaling Configuration
min_size = 1
max_size = 5
desired_capacity = 2

# Load Balancer Configuration
enable_load_balancer = true
ssl_certificate_arn = ""  # ARN of SSL certificate in AWS Certificate Manager

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this in production!

# OpenClaw Application Configuration
openclaw_port = 3000
openclaw_version = "latest"

# Monitoring and Logging
enable_cloudwatch_monitoring = true

# Backup Configuration
backup_retention_days = 7

# Additional Resource Tags
additional_tags = {
  "Owner"       = "your-name"
  "Department"  = "engineering"
  "CostCenter"  = "12345"
  "Schedule"    = "business-hours"  # For automated start/stop
}

